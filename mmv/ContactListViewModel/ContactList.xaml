<Window x:Class="mmv.ContactList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mmv"
        mc:Ignorable="d"
        Title="ContactList" Height="450" Width="800">
    <Grid>
        <!-- Contact List -->
        <ListView ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact}" Margin="10" SelectionChanged="ListView_SelectionChanged"/>
    </Grid>
</Window>
