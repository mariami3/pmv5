<Window x:Class="mmv.ContactDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mmv"
        mc:Ignorable="d"
        Title="ContactDetails" Height="450" Width="800">
    <Grid>
        
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock Text="{Binding SelectedContact.Name}" FontSize="20" Margin="10"/>
            <TextBlock Text="{Binding SelectedContact.Phone}" FontSize="16" Margin="10"/>
            <TextBlock Text="{Binding SelectedContact.Email}" FontSize="16" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
